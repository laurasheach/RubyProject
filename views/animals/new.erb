<h1 class="main">Admit an animal to the shelter:</h1>
<br>

  <form class="form" action="/animals" method="post">
      <label for="name"><strong>Name:</strong></label>
      <input id="name" type="text" name="name"/>


      <label for="animal_type"><strong>Animal Type:</strong></label>
      <input id="animal_type" type="text" name="animal_type"/>



      <label for="breed"><strong>Breed:</strong></label>
      <input id="breed" type="text" name="breed"/>



      <label for="age"><strong>Age:</strong></label>
      <input id="age" type="text" name="age"/>



      <label for="admission_date"><strong>Admission Date:</strong></label>
      <input id="admission_date" type="date" name="admission_date"/>

      <label for="adoption_status"><strong>Adoption Status:</strong></label>
      <select id="adoption_status" name="adoption_status">
        <option value="Unavailable" selected="selected">Unavailable</option>
        <option value="Available">Available</option>
      </select>

      <label for="animal_url"><strong>Photo</strong></label>
      <input type="text" name="animal_url" value="" src=""/>

      <input class="admit-button submit-button" type="submit" value="Admit animal"/>

  </form>
