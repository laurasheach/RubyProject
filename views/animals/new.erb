<h1>Admit an animal to the shelter:</h1>

<div class="container">
  <form action="/animals" method="post">
    <label for="name">Name:</label>
    <input id="name" type="text" name="name"/>

    <label for="animal_type">Animal Type:</label>
    <input id="animal_type" type="text" name="animal_type"/>

    <label for="breed">Breed:</label>
    <input id="breed" type="text" name="breed"/>

    <label for="age">Age:</label>
    <input id="age" type="text" name="age"/>

    <label for="admission_date">Admission Date:</label>
    <input id="admission_date" type="date" name="admission_date"/>

    <label for="adoption_status">Adoption Status:</label>
    <select id="adoption_status" name="adoption_status">
      <option value="Unavailable" selected>Unavailable</option>
      <option value="Available">Available</option>
    </select>

    <input type="submit" value="Admit animal">

  </form>
</div>
