<h1 class="main">All Animals In Training/Vet Care</h1>
<form class="main" action="/animals" method="get">
  <input class="submit-button" type="submit" value="Back to all Animals">
</form>
<br>
<table>
  <tr>
    <th>Animal id</th>
    <th>Name</th>
    <th>Animal Type</th>
    <th>Breed</th>
    <th>Age</th>
    <th>Admission Date</th>
    <th>Availabilty</th>
    <th></th>
  </tr>

<% for animal in @animals%>
<% if animal.adoption_status == "Unavailable" && animal.owners == [] %>
  <tr>
    <td><%= animal.id %></td>
    <td><%= animal.name %></td>
    <td><%= animal.animal_type %></td>
    <td><%= animal.breed %></td>
    <td><%= animal.age %></td>
    <td><%= animal.admission_date %></td>
    <td><%= animal.adoption_status %></td>
    <td><a href="/animals/<%= animal.id %>">Show Animal</a></td>
  </tr>
<% end %>
<% end %>


</table>
