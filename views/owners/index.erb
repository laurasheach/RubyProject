<h1>All Owners</h1>

<table>
  <tr>
    <th>Owner id</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Address</th>
    <th></th>
  </tr>

<% for owner in @owners%>
  <tr>
    <td><%= owner.id %></td>
    <td><%= owner.first_name %></td>
    <td><%= owner.last_name %></td>
    <td><%= owner.address %></td>
    <td><a href="/owners/<%= owner.id %>">Show Owner</a></td>
  </tr>
<% end %>

</table>
